<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Signup</title>
  <link id="main-icon" rel="icon" href="../image/wanderlust.png">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
</head>
<%- include("../includes/nevbar.ejs") %>
<%- include("../includes/flash.ejs") %>
<link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet">
<link rel="stylesheet" href="../css/signup.css">

<body>
  <div class="signup">
    <img src="../image/login-bg.png" alt="Signup Image" class="signup__img">

    <form action="/signup" method="post" class="signup__form needs-validation" novalidate>
      <h1 class="signup__title">Sign Up</h1>

      <div class="signup__content">
        <div class="signup__box">
          <i class="ri-user-3-line signup__icon"></i>
          <div class="signup__box-input">
            <input type="text" required class="signup__input " name="username" id="signup-username" placeholder=" ">
            <label for="signup-username" class="signup__label">Username</label>
            <div class="invalid-feedback">Please enter a username.</div>
          </div>
        </div>

        <div class="signup__box">
          <i class="ri-mail-line signup__icon"></i>
          <div class="signup__box-input">
            <input type="email" required class="signup__input " name="email" id="signup-email" placeholder=" ">
            <label for="signup-email" class="signup__label">Email</label>
            <div class="invalid-feedback">Please enter a valid email.</div>
          </div>
        </div>

        <div class="signup__box">
          <i class="ri-lock-2-line signup__icon"></i>
          <div class="signup__box-input">
            <input type="password" required class="signup__input " name="password" id="signup-pass" placeholder=" ">
            <label for="signup-pass" class="signup__label">Password</label>
            <div class="invalid-feedback">Please enter a password.</div>
            <i class="ri-eye-off-line signup__eye" id="signup-eye"></i>
          </div>
        </div>
      </div>

      <button type="submit" class="signup__button">Sign Up</button>

      <p class="signup__register">
        Already have an account? <a href="/login">Login</a>
      </p>
    </form>
  </div>
  <%- include("../includes/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/JS/validate.js"></script>
    
  <script src="../JS/signup.js"></script>
</body>
