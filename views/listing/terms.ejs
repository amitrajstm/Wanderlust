<% layout('./layouts/boilerplate') -%>
<body>
    <style>
        /* General Styles */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f9fa; /* Light gray background */
    margin: 0;
    padding: 0;
}

main {
    background-color: #ffffff; /* White background for the main content */
    padding: 30px;
    max-width: 800px;
    margin: 40px auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for elevation */
}

h2 {
    color: #007bff; /* Bootstrap primary color for the title */
    text-align: center;
    margin-bottom: 20px;
}

h3 {
    color: #343a40; /* Dark gray for section headings */
    margin-top: 20px;
}

p {
    color: #6c757d; /* Medium gray for body text */
    line-height: 1.7; /* Improve readability */
    margin-bottom: 15px;
}

a {
    color: #007bff; /* Link color */
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

/* Responsive Design */
@media (max-width: 768px) {
    main {
        padding: 20px;
    }

    h2 {
        font-size: 1.5rem;
    }

    h3 {
        font-size: 1.2rem;
    }
}

    </style>
